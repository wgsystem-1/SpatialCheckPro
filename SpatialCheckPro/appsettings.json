{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "File": {
      "Path": "Logs/app-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760,
      "RollOnFileSizeLimit": true
    }
  },
  "Database": {
    "ConnectionString": "Data Source=ValidationResults.db;Cache=Shared",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false
  },
  "FileProcessing": {
    "MaxFileSizeBytes": 2147483648,
    "ChunkSizeBytes": 104857600,
    "TempDirectory": "Temp",
    "SupportedFormats": [ "SHP", "FileGDB", "GeoPackage" ],
    "MaxConcurrentFiles": 5
  },
  "Validation": {
    "ConfigDirectory": "Config",
    "ReportOutputDirectory": "Reports",
    "ErrorShapefileDirectory": "ErrorShapefiles",
    "MaxErrorsPerCheck": 10000,
    "EnableDetailedLogging": true
  },
  "UI": {
    "Theme": "Light",
    "Language": "ko-KR",
    "AutoSaveInterval": 300,
    "ShowProgressDetails": true,
    "MapZoomLevel": 10
  },
  "Security": {
    "EnableFilePathValidation": true,
    "AllowedFileExtensions": [ ".shp", ".gdb", ".gpkg", ".csv" ],
    "MaxFilePathLength": 260,
    "EnableAuditLogging": true,
    "EncryptSensitiveData": true
  },
  "Performance": {
    "MaxMemoryUsageMB": 2048,
    "EnablePerformanceCounters": true,
    "GarbageCollectionMode": "Interactive"
  }
}