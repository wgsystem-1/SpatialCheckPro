<UserControl x:Class="SpatialCheckPro.GUI.Views.ValidationProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SpatialCheckPro.GUI.Converters"
             xmlns:viewModels="clr-namespace:SpatialCheckPro.GUI.ViewModels"
             x:Name="RootControl">
    
    <UserControl.Resources>
        <!-- 컨버터 제거 - 직접 리소스 사용 -->
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- 헤더 -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="검수 진행" Style="{StaticResource HeadingLarge}"/>
                    <TextBlock Text="검사 과정을 실시간으로 모니터링합니다" Style="{StaticResource CaptionText}"/>
                </StackPanel>
                
                <Button Grid.Column="1" x:Name="StopValidationButton" 
                       Style="{StaticResource SecondaryButton}"
                       Click="StopValidation_Click"
                       Padding="24,12">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Fill="{StaticResource ErrorColor}" 
                                  Width="12" Height="12" 
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="검수 중지" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
            
            <!-- 전체 진행률 카드 -->
            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 카드 헤더 -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="전체 진행률" Style="{StaticResource HeadingMedium}"/>
                        <TextBlock x:Name="ProgressStatusText" 
                                  Text="검수 대기 중..." 
                                  Style="{StaticResource CaptionText}" 
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- 진행률 바 -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ProgressBar x:Name="ProgressBar" 
                                    Grid.Column="0"
                                    Style="{StaticResource ModernProgressBar}" 
                                    Height="12" 
                                    Margin="0,0,16,0"/>
                        
                        <TextBlock x:Name="ProgressPercentageText" 
                                  Grid.Column="1"
                                  Text="0%" 
                                  Style="{StaticResource BodyText}" 
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>

                        <Border Grid.Column="2" Style="{StaticResource StageStatusBadge}" Background="#E0F2FE" Margin="16,0,0,0"
                                Visibility="{Binding RemainingTotalEta, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="예상 남은 시간" Style="{StaticResource CaptionText}" FontWeight="SemiBold"/>
                                <TextBlock Text=" " />
                                <TextBlock Text="{Binding RemainingEtaConfidence, StringFormat=({0:P0})}" Style="{StaticResource CaptionText}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- 상세 정보 (통계 대시보드) -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="현재 단계" Style="{StaticResource CaptionText}"/>
                            <TextBlock x:Name="CurrentStageText" 
                                      Text="-" 
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="Medium" 
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="소요 시간" Style="{StaticResource CaptionText}"/>
                            <TextBlock x:Name="ElapsedTimeText" 
                                      Text="00:00:00" 
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="Medium" 
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="완료 단계" Style="{StaticResource CaptionText}"/>
                            <TextBlock x:Name="CompletedStagesText" 
                                      Text="0 / 5" 
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="Medium" 
                                      Foreground="{StaticResource PrimaryColor}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="예상 남은 시간" Style="{StaticResource CaptionText}"/>
                            <TextBlock x:Name="EstimatedTimeText" 
                                      Text="계산 중..." 
                                      Style="{StaticResource BodyText}" 
                                      FontWeight="Medium" 
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Phase 2 Item #14: 시스템 리소스 모니터링 카드 -->
            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 카드 헤더 -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="⚡ 시스템 리소스 &amp; 병렬도 조정" Style="{StaticResource HeadingMedium}"/>
                            <TextBlock Text="실시간 리소스 사용량 및 동적 병렬도 최적화"
                                      Style="{StaticResource CaptionText}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- 병렬도 조정 상태 배지 -->
                        <Border Grid.Column="1"
                               Background="#DCFCE7"
                               CornerRadius="6"
                               Padding="12,6"
                               VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✓"
                                          Foreground="#16A34A"
                                          FontWeight="Bold"
                                          FontSize="14"
                                          Margin="0,0,6,0"/>
                                <TextBlock x:Name="ParallelismStatusText"
                                          Text="자동 조정 활성"
                                          Foreground="#16A34A"
                                          FontWeight="SemiBold"
                                          FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- 리소스 통계 그리드 -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CPU 사용률 -->
                        <Border Grid.Column="0"
                               Background="#F8FAFC"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,0,8,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="💻" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="CPU 사용률"
                                              Style="{StaticResource CaptionText}"
                                              FontWeight="SemiBold"
                                              VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock x:Name="CpuUsageText"
                                              Text="65"
                                              FontSize="36"
                                              FontWeight="Bold"
                                              Foreground="#22C55E"/>
                                    <TextBlock Text="%"
                                              FontSize="24"
                                              FontWeight="Medium"
                                              Foreground="#64748B"
                                              VerticalAlignment="Bottom"
                                              Margin="2,0,0,4"/>
                                    <Ellipse x:Name="CpuIndicator"
                                            Width="16" Height="16"
                                            Fill="#22C55E"
                                            VerticalAlignment="Center"
                                            Margin="12,0,0,4"/>
                                </StackPanel>

                                <ProgressBar x:Name="CpuProgressBar"
                                            Value="65"
                                            Maximum="100"
                                            Height="6"
                                            Margin="0,0,0,8"
                                            Style="{StaticResource ModernProgressBar}"/>

                                <TextBlock x:Name="CpuStatusText"
                                          Text="적정 범위 (50-70%)"
                                          Style="{StaticResource CaptionText}"
                                          Foreground="#64748B"/>
                            </StackPanel>
                        </Border>

                        <!-- 메모리 압박률 -->
                        <Border Grid.Column="1"
                               Background="#F8FAFC"
                               CornerRadius="8"
                               Padding="16"
                               Margin="4,0,4,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="🧠" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="메모리 압박률"
                                              Style="{StaticResource CaptionText}"
                                              FontWeight="SemiBold"
                                              VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock x:Name="MemoryPressureText"
                                              Text="45"
                                              FontSize="36"
                                              FontWeight="Bold"
                                              Foreground="#22C55E"/>
                                    <TextBlock Text="%"
                                              FontSize="24"
                                              FontWeight="Medium"
                                              Foreground="#64748B"
                                              VerticalAlignment="Bottom"
                                              Margin="2,0,0,4"/>
                                    <Ellipse x:Name="MemoryIndicator"
                                            Width="16" Height="16"
                                            Fill="#22C55E"
                                            VerticalAlignment="Center"
                                            Margin="12,0,0,4"/>
                                </StackPanel>

                                <ProgressBar x:Name="MemoryPressureBar"
                                            Value="45"
                                            Maximum="100"
                                            Height="6"
                                            Margin="0,0,0,8"
                                            Style="{StaticResource ModernProgressBar}"/>

                                <TextBlock x:Name="MemoryStatusText"
                                          Text="안정적 (&lt; 80%)"
                                          Style="{StaticResource CaptionText}"
                                          Foreground="#64748B"/>
                            </StackPanel>
                        </Border>

                        <!-- 현재 병렬도 -->
                        <Border Grid.Column="2"
                               Background="#F8FAFC"
                               CornerRadius="8"
                               Padding="16"
                               Margin="8,0,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="⚡" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="현재 병렬도"
                                              Style="{StaticResource CaptionText}"
                                              FontWeight="SemiBold"
                                              VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock x:Name="ParallelismCurrentText"
                                              Text="6"
                                              FontSize="36"
                                              FontWeight="Bold"
                                              Foreground="#3B82F6"/>
                                    <TextBlock Text=" / "
                                              FontSize="28"
                                              FontWeight="Medium"
                                              Foreground="#94A3B8"
                                              VerticalAlignment="Bottom"
                                              Margin="4,0,4,4"/>
                                    <TextBlock x:Name="ParallelismMaxText"
                                              Text="8"
                                              FontSize="28"
                                              FontWeight="Medium"
                                              Foreground="#64748B"
                                              VerticalAlignment="Bottom"
                                              Margin="0,0,0,4"/>
                                </StackPanel>

                                <!-- 병렬도 변경 히스토리 미니 차트 (간단한 표시) -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <Rectangle Width="8" Height="20" Fill="#E2E8F0" RadiusX="2" RadiusY="2" Margin="2,0"/>
                                    <Rectangle Width="8" Height="28" Fill="#CBD5E1" RadiusX="2" RadiusY="2" Margin="2,0"/>
                                    <Rectangle Width="8" Height="32" Fill="#94A3B8" RadiusX="2" RadiusY="2" Margin="2,0"/>
                                    <Rectangle Width="8" Height="40" Fill="#3B82F6" RadiusX="2" RadiusY="2" Margin="2,0"/>
                                </StackPanel>

                                <TextBlock x:Name="ParallelismAdjustmentText"
                                          Text="↑ 2단계 증가 (30초 전)"
                                          Style="{StaticResource CaptionText}"
                                          Foreground="#3B82F6"
                                          FontWeight="Medium"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Phase 2 Items #7, #10, #11, #12: 성능 최적화 상태 카드 -->
            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 카드 헤더 -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="🚀 성능 최적화 상태" Style="{StaticResource HeadingMedium}"/>
                        <TextBlock Text="캐싱, 스트리밍, 배치 처리 등의 최적화 메트릭"
                                  Style="{StaticResource CaptionText}" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 최적화 통계 그리드 -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 상단 행: 캐시 & 스트리밍 -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 캐시 히트율 (Phase 2 Item #10) -->
                            <Border Grid.Column="0"
                                   Background="#FEF3C7"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="0,0,6,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                           Width="48" Height="48"
                                           CornerRadius="24"
                                           Background="#FBBF24"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0">
                                        <TextBlock Text="🗂️"
                                                  FontSize="24"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="캐시 히트율"
                                                  FontSize="12"
                                                  Foreground="#92400E"
                                                  FontWeight="Medium"
                                                  Margin="0,0,0,4"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="CacheHitRatioText"
                                                      Text="87"
                                                      FontSize="28"
                                                      FontWeight="Bold"
                                                      Foreground="#92400E"/>
                                            <TextBlock Text="%"
                                                      FontSize="20"
                                                      FontWeight="Medium"
                                                      Foreground="#92400E"
                                                      VerticalAlignment="Bottom"
                                                      Margin="2,0,0,2"/>
                                        </StackPanel>
                                        <TextBlock x:Name="CachedItemsText"
                                                  Text="Layer: 23개 | Schema: 12개"
                                                  FontSize="11"
                                                  Foreground="#78350F"
                                                  Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- 스트리밍 모드 (Phase 2 Item #7) -->
                            <Border Grid.Column="1"
                                   Background="#DBEAFE"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="6,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                           Width="48" Height="48"
                                           CornerRadius="24"
                                           Background="#3B82F6"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0">
                                        <TextBlock Text="💾"
                                                  FontSize="24"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="스트리밍 모드"
                                                      FontSize="12"
                                                      Foreground="#1E3A8A"
                                                      FontWeight="Medium"/>
                                            <Border Background="#22C55E"
                                                   CornerRadius="4"
                                                   Padding="6,2"
                                                   Margin="8,0,0,0">
                                                <TextBlock x:Name="StreamingStatusText"
                                                          Text="활성"
                                                          FontSize="10"
                                                          Foreground="White"
                                                          FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock x:Name="StreamedErrorCountText"
                                                  Text="1,234개 오류 기록됨"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="#1E3A8A"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock x:Name="StreamingPathText"
                                                  Text="errors_20250129.jsonl"
                                                  FontSize="11"
                                                  Foreground="#1E40AF"
                                                  TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- 하단 행: 배치 처리 & EF Core -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 배치 처리 (Phase 1.3 & Item #12) -->
                            <Border Grid.Column="0"
                                   Background="#E0E7FF"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="0,0,6,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                           Width="48" Height="48"
                                           CornerRadius="24"
                                           Background="#6366F1"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0">
                                        <TextBlock Text="📦"
                                                  FontSize="24"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="배치 처리"
                                                  FontSize="12"
                                                  Foreground="#312E81"
                                                  FontWeight="Medium"
                                                  Margin="0,0,0,4"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock x:Name="BatchSizeText"
                                                      Text="5,000"
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      Foreground="#312E81"/>
                                            <TextBlock Text="개/배치"
                                                      FontSize="12"
                                                      Foreground="#4338CA"
                                                      VerticalAlignment="Bottom"
                                                      Margin="4,0,0,2"/>
                                        </StackPanel>
                                        <TextBlock x:Name="ThroughputText"
                                                  Text="⚡ 1,234 features/sec"
                                                  FontSize="11"
                                                  Foreground="#4338CA"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- EF Core 쿼리 최적화 (Phase 2 Item #11) -->
                            <Border Grid.Column="1"
                                   Background="#D1FAE5"
                                   CornerRadius="8"
                                   Padding="16"
                                   Margin="6,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                           Width="48" Height="48"
                                           CornerRadius="24"
                                           Background="#10B981"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0">
                                        <TextBlock Text="🗃️"
                                                  FontSize="24"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="EF Core 쿼리"
                                                  FontSize="12"
                                                  Foreground="#064E3B"
                                                  FontWeight="Medium"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="AsSplitQuery()"
                                                  FontSize="16"
                                                  FontWeight="Bold"
                                                  Foreground="#064E3B"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock x:Name="QueryOptimizationText"
                                                  Text="✓ N+1 방지 | ✓ 카테시안 곱 제거"
                                                  FontSize="11"
                                                  Foreground="#047857"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- 단계별 진행 상황 -->
            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="검수 단계" Style="{StaticResource HeadingMedium}"/>
                        <TextBlock Text="단계별 진행률과 알림을 통합 표시합니다" Style="{StaticResource CaptionText}" Margin="0,4,0,0"/>
                    </StackPanel>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding StageSummaries}">
                        <ItemsControl.Resources>
                            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
                            <converters:SeverityToBrushConverter x:Key="SeverityToBrushConverter"/>
                            <converters:StageStatusToIconConverter x:Key="StageStatusToIconConverter"/>
                        </ItemsControl.Resources>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModels:StageSummaryViewModel}">
                                <Border Style="{StaticResource StageTimelineCard}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,16,0">
                                            <Border Width="36" Height="36" CornerRadius="18" Background="{StaticResource StageNumberBackground}">
                                                <TextBlock Text="{Binding StageNumber}" Foreground="{StaticResource StageNumberForeground}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                            </Border>
                                            <Rectangle Style="{StaticResource TimelineConnector}" Height="48" Margin="0,12,0,0" Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding StageName}" Style="{StaticResource StageCardHeader}"/>
                                                <Border Style="{StaticResource StageStatusBadge}" Background="#EEF2FF" Margin="8,0,0,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Status, Converter={StaticResource StageStatusToIconConverter}}" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                                        <TextBlock Text="{Binding Status}" Style="{StaticResource CaptionText}" FontWeight="SemiBold" Margin="6,0,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

            <ProgressBar Value="{Binding Progress, Mode=OneWay}" Height="6" Margin="0,12,0,8" Minimum="0" Maximum="100" Style="{StaticResource ModernProgressBar}"/>
                                            <TextBlock Text="{Binding LastMessage}" Style="{StaticResource StageCardDescription}" TextWrapping="Wrap"/>

                                            <ItemsControl ItemsSource="{Binding Alerts}" Margin="0,12,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Style="{StaticResource StageAlertPanel}">
                                                            <StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Rectangle Width="8" Height="8" RadiusX="4" RadiusY="4" Fill="{Binding Severity, Converter={StaticResource SeverityToBrushConverter}}"/>
                                                                    <TextBlock Text="{Binding Message}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryColor}" Margin="8,0,0,0"/>
                                                                </StackPanel>
                                                                <TextBlock Text="{Binding Detail}" Style="{StaticResource CaptionText}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0">
                                            <Border Style="{StaticResource StageStatusBadge}" Background="#E0F2FE" Visibility="{Binding EtaDisplayHint, Converter={StaticResource NullToVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding EtaDisplayHint}" Style="{StaticResource EtaBadgeText}"/>
                                                    <TextBlock Text=" " />
                                                    <TextBlock Text="{Binding EtaConfidence, StringFormat=({0:P0})}" Style="{StaticResource CaptionText}"/>
                                                </StackPanel>
                                            </Border>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Visibility="{Binding HasUnitInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="단위" Style="{StaticResource CaptionText}" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding ProcessedUnits}" Style="{StaticResource CaptionText}"/>
                                                <TextBlock Text="/" Style="{StaticResource CaptionText}" Margin="4,0"/>
                                                <TextBlock Text="{Binding TotalUnits}" Style="{StaticResource CaptionText}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
            
            <!-- 실시간 로그 -->
            <Border Style="{StaticResource ModernCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 카드 헤더 -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="검수 로그" Style="{StaticResource HeadingMedium}"/>
                        <TextBlock Text="실시간 검수 과정을 확인할 수 있습니다" 
                                  Style="{StaticResource CaptionText}" Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- 로그 영역 -->
                    <Border Grid.Row="1" 
                           Background="#1E293B" 
                           CornerRadius="8" 
                           Padding="16">
                        <ScrollViewer x:Name="LogScrollViewer" 
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto">
                            <TextBlock x:Name="LogTextBlock" 
                                      FontFamily="{StaticResource MonospaceFont}" 
                                      FontSize="12" 
                                      Foreground="#E2E8F0" 
                                      TextWrapping="Wrap"
                                      Text="검수 로그가 여기에 표시됩니다..."/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>