<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 대시보드용 KPI 카드 공통 스타일: 가벼운 타일 형태 -->
    <Style x:Key="KpiCard" TargetType="Border">
        <!-- 바깥쪽 보더 제거: 내부 배지(Border)는 유지 -->
        <Setter Property="Background" Value="{StaticResource CardColor}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Effect" Value="{x:Null}"/>
    </Style>

    <!-- 대시보드 캡션(라벨) 텍스트 -->
    <Style x:Key="KpiCaption" TargetType="TextBlock" BasedOn="{StaticResource CaptionText}">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- 대시보드 값 텍스트 -->
    <Style x:Key="KpiValue" TargetType="TextBlock" BasedOn="{StaticResource HeadingMedium}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- 섹션 헤더 텍스트 (카드 내부 소제목) -->
    <Style x:Key="SectionHeader" TargetType="TextBlock" BasedOn="{StaticResource HeadingSmall}">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
    </Style>

    <!-- 배지(Badge) 기본/변형 -->
    <Style x:Key="Badge" TargetType="Border">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="8,2"/>
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#F1F5F9"/>
        <Setter Property="BorderBrush" Value="#E2E8F0"/>
    </Style>

    <Style x:Key="BadgePrimary" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="#DBEAFE"/>
        <Setter Property="BorderBrush" Value="#2563EB"/>
    </Style>

    <Style x:Key="BadgeError" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="#FEE2E2"/>
        <Setter Property="BorderBrush" Value="#EF4444"/>
    </Style>

    <Style x:Key="BadgeWarn" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="#FEF3C7"/>
        <Setter Property="BorderBrush" Value="#D97706"/>
    </Style>

</ResourceDictionary>

