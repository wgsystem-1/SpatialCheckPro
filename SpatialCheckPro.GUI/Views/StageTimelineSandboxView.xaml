<UserControl x:Class="SpatialCheckPro.GUI.Views.StageTimelineSandboxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:SpatialCheckPro.GUI.ViewModels"
             xmlns:converters="clr-namespace:SpatialCheckPro.GUI.Converters"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:SeverityToBrushConverter x:Key="SeverityToBrushConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:StageStatusToIconConverter x:Key="StageStatusToIconConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource SurfaceColor}" Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="단계 타임라인 샌드박스" Style="{StaticResource HeadingMedium}"/>
            <Border Style="{StaticResource StageStatusBadge}" Background="#E0E7FF" Margin="12,0,0,0">
                <TextBlock Text="샌드박스" Style="{StaticResource CaptionText}" FontWeight="SemiBold" Foreground="#3730A3"/>
            </Border>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Stages}" AlternationCount="1">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewModels:StageSummaryViewModel}">
                        <Border Style="{StaticResource StageTimelineCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 타임라인 번호/상태 -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,16,0">
                                    <Border Width="36" Height="36" CornerRadius="18" Background="{StaticResource StageNumberBackground}">
                                        <TextBlock Text="{Binding StageNumber}" Foreground="{StaticResource StageNumberForeground}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                    </Border>
                                    <Rectangle Style="{StaticResource TimelineConnector}" Height="48" Margin="0,12,0,0" Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>

                                <!-- 본문 -->
                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StageName}" Style="{StaticResource StageCardHeader}"/>
                                        <Border Style="{StaticResource StageStatusBadge}" Background="#EEF2FF" DataContext="{Binding}">
                                            <StackPanel Orientation="Horizontal" Margin="0" >
                                                <TextBlock Text="{Binding Status, Converter={StaticResource StageStatusToIconConverter}}" FontFamily="{x:Static viewModels:SandboxFonts.IconFont}" FontSize="14"/>
                                                <TextBlock Text="{Binding Status}" Style="{StaticResource CaptionText}" FontWeight="SemiBold" Margin="6,0,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <ProgressBar Value="{Binding Progress, Mode=OneWay}" Height="6" Margin="0,12,0,8" Minimum="0" Maximum="100" Style="{StaticResource ModernProgressBar}"/>
                                    <TextBlock Text="{Binding LastMessage}" Style="{StaticResource StageCardDescription}"/>

                                    <!-- 알림 리스트 -->
                                    <ItemsControl ItemsSource="{Binding Alerts}" Margin="0,12,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource StageAlertPanel}">
                                                    <StackPanel Orientation="Vertical">
                                                    <StackPanel Orientation="Horizontal">
                                                            <Rectangle Width="8" Height="8" RadiusX="4" RadiusY="4" Fill="{Binding Severity, Converter={StaticResource SeverityToBrushConverter}}"/>
                                                        <TextBlock Text="{Binding Message}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryColor}" Margin="8,0,0,0"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Detail}" Style="{StaticResource CaptionText}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- ETA/단위 정보 -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <Border Style="{StaticResource StageStatusBadge}" Background="#E0F2FE" Visibility="{Binding EstimatedRemaining, Converter={StaticResource NullToVisibilityConverter}}">
                                        <TextBlock Text="{Binding EstimatedRemaining, StringFormat=남은 시간 {0:hh\:mm\:ss}}" Style="{StaticResource EtaBadgeText}"/>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Visibility="{Binding HasUnitInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="단위" Style="{StaticResource CaptionText}" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding ProcessedUnits}" Style="{StaticResource CaptionText}"/>
                                        <TextBlock Text="/" Style="{StaticResource CaptionText}" Margin="4,0"/>
                                        <TextBlock Text="{Binding TotalUnits}" Style="{StaticResource CaptionText}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

