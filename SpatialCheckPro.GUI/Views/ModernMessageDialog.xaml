<Window x:Class="SpatialCheckPro.GUI.Views.ModernMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="알림">

    <Border x:Name="RootBorder" Background="White" CornerRadius="12" Padding="24" BorderBrush="#E5E7EB" BorderThickness="1" Opacity="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <Grid Width="28" Height="28">
                    <Ellipse x:Name="IconBadge" Fill="#3B82F6"/>
                    <Path x:Name="IconPath" Data="M10 15l-3.5-3.5 1.1-1.1L10 12.8l5.3-5.3 1.1 1.1z" Fill="White" Stretch="Uniform" Margin="4"/>
                </Grid>
                <TextBlock x:Name="TitleText" Text="검수 완료" Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="16" FontWeight="SemiBold" Foreground="#111827"/>
            </StackPanel>

            <!-- 메시지 -->
            <TextBlock x:Name="BodyText" Grid.Row="1" Text="검수가 완료되었습니다!" Margin="0,0,0,16"
                       TextWrapping="Wrap" Foreground="#374151"/>

            <!-- 파일 경로 섹션 -->
            <StackPanel Grid.Row="2" Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" x:Name="PdfRow" Visibility="Collapsed">
                    <TextBlock Text="PDF" Width="44" Foreground="#374151" Margin="0,0,8,0"/>
                    <TextBox x:Name="PdfPathText" IsReadOnly="True" MinWidth="420" Margin="0,0,8,8"/>
                    <Button Content="복사" Style="{StaticResource SecondaryButton}" Click="CopyPdf_Click" Margin="0,0,6,8"/>
                    <Button Content="열기" Style="{StaticResource PrimaryButton}" Click="OpenPdf_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" x:Name="HtmlRow" Visibility="Collapsed" Margin="0,8,0,0">
                    <TextBlock Text="HTML" Width="44" Foreground="#374151" Margin="0,0,8,0"/>
                    <TextBox x:Name="HtmlPathText" IsReadOnly="True" MinWidth="420" Margin="0,0,8,0"/>
                    <Button Content="복사" Style="{StaticResource SecondaryButton}" Click="CopyHtml_Click" Margin="0,0,6,0"/>
                    <Button Content="열기" Style="{StaticResource PrimaryButton}" Click="OpenHtml_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- 하단 버튼 -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="폴더 열기" Style="{StaticResource SecondaryButton}" Click="OpenFolder_Click" Margin="0,0,8,0"/>
                <Button Content="확인" Style="{StaticResource PrimaryButton}" Width="96" Click="Ok_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>


