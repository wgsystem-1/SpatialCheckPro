    <!-- 색상 팔레트 -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
    <SolidColorBrush x:Key="PrimaryHoverColor" Color="#1D4ED8"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#64748B"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#EF4444"/>
    <SolidColorBrush x:Key="SurfaceColor" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#0F172A"/>
    <SolidColorBrush x:Key="TextSecondaryColor" Color="#64748B"/>
    <!-- 사이드바 색상: 시안에 맞춰 더 어두운 네이비 톤과 부드러운 호버 톤 적용 -->
    <SolidColorBrush x:Key="SidebarColor" Color="#243447"/>
    <SolidColorBrush x:Key="SidebarHoverColor" Color="#36536B"/>

    <!-- 사이드바 아이콘 파스텔 팔레트 -->
    <SolidColorBrush x:Key="SidebarIconFolder" Color="#9CC2FF"/>
    <SolidColorBrush x:Key="SidebarIconPlay" Color="#A7F3D0"/>
    <SolidColorBrush x:Key="SidebarIconChart" Color="#C7D2FE"/>
